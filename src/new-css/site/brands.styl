.page-content > .wrap-block.wrap-brand-info
  +min(mobile)
    margin-top 40px
  .block-content
    padding-left 8.5%
    padding-right 8%
    +max(mobile)
      padding-left 0
      padding-right 0
    p
      line-height 22px

.brands-list-cart
  display flex
  flex-wrap: wrap
  margin -44px -34px
  justify-content center
  +max(tablet)
    margin -24px -34px
  .brands-item
    max-width: 180px
    width 100%
    height 80px
    display block
    background-size contain
    background-repeat no-repeat
    background-position center center
    margin 44px 34px
    +max(tablet)
      margin 24px 34px

.form-sorting_view
  justify-content flex-end
  .form-sorting__title
      margin-right 33px
  .sorting-type__label
    svg    
      max-width: 18px
      width 18px
      height 18px
      margin-top 0
      margin-left 0
      margin-right 4px

.-list
  &:hover
    svg
      stroke none
      fill #EF182F
  svg
    fill #2D2841
    stroke none

.-cart
  &:hover
    svg
      stroke none
      fill #EF182F
  svg
    stroke none
    fill #2d2841

.form-sorting_view
  input[type="radio"]:checked ~ label
    svg
      stroke none
      fill #EF182F

.brands-list-word
  // column-count: 2
  display flex
  flex-wrap: wrap
  +max(sMobile)
    display block

.brands-item-word
  display flex
  margin-bottom 45px
  width 50%
  +max(mobile)
    display block
  +max(sMobile)
    width 100%

.brands-item-word__title
  font-weight: 600
  font-size: 52px
  line-height: 48px
  margin-right 11%
  +max(mobile)
    margin-right 0
    margin-bottom 15px

.brands-itemword__list
  a
    display block
    font-weight: bold
    font-size: 18px
    line-height: 22px
    &:not(:first-child)
      margin-top 8px