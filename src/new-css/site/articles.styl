video.vertical
  display: block;
  margin: auto;
  max-height: 90vh;
.block-content-art
  margin-bottom: 20px;
  a
    text-decoration: underline;
  blockquote
    margin-bottom: 20px;
    padding: 20px;
    border-radius: 20px;
    background: #ddd;
  img
    border-radius: 8px;
  .mt-5
  .my-5
    margin-top: 3rem !important;
  h2
  h3
    margin-bottom: 0.5rem;
  .fr-fic
    display: block;
    width: 100% !important;
    margin: 40px 0;
    .fr-inner
      font-size: 13px;
      display: block;
      margin-top: 16px;
      padding-right: 20%;
      color: #79818c;
  ol
    li
      list-style: decimal;
      list-style-position: inside;


.article-share
  display: flex;
  line-height: 36px;
  margin-bottom: 22px;
  .article-date
    padding-left: 12px;
  .article-views
    padding-left: 12px;
    svg
      padding-top: 1px;
  svg
    fill: #7a818d;
    height: 12px;
    width: 15px;

.wrap-block__article-grey
  background-color: #fafafa;
  margin-bottom: -64px;
  padding: 54px 0;
.sl-sexopedy
.sl-news
  padding-bottom: 40px;
.sexopedy-element
  max-width: 377px;
  &.news-element
    max-width: 277px;
    margin-bottom: 20px;
  &.empty
    margin: 0;
    height: 0;
  .img-wrapper
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    line-height: 0;
    text-align: center;
    img
      border-radius: 8px;
      max-width: 100%;

  .img-wrapper
  .article-name
  .article-bottom
    display: block;
  .article-bottom
    color: #7a818d;
    .article-views
      padding-left: 12px;
      svg
        padding-top: 1px;
    svg
      fill: #7a818d;
      height: 12px;
      width: 15px;
  .article-cat-name
    display: block;
    margin-top: 16px;
    color: #EF182F;
    font-size: 13px;
    line-height: 20px;
    font-weight: 400;
.articles-list
  display flex
  flex-wrap: wrap
  &.news-list
    justify-content: space-between;

.article-item
  max-width: 100%
  +min(sMobile)
    max-width: calc((100% / 3) - 16px)

.article-item
  &:not(:nth-child(3n+3))
    +min(sMobile)
      margin-right 1.93%
  &:not(:nth-child(-n+3))
    +min(sMobile)
      margin-top 43px
  &:not(:first-child)
    +max(sMobile)
      margin-top 30px

.article-item
  & > *
    display block
  .overview-item__tag
    font-size 15px
    line-height 22px
    font-weight 500
    margin-top 6px
  .overview-item__text
    font-size 18px
    line-height 22px
    font-weight 700
    margin-top 12px
    margin-bottom 0
    width 100%
    +max(mobile)
      font-size 15px

.overview-item__img
  line-height: 0;

.filter-article__title
  display flex
  align-items center
  cursor pointer
  span
    font-size 18px
    line-height 22px
    font-weight 700
  .btn-arr
    margin-left 4px
  &.active
    .btn-arr
      transform rotate(-90deg)

.btn-arr
  transform rotate(90deg)
  max-width 16px
  width 16px
  height 16px
  flex 1 0 auto
  padding 2px
  display flex
  align-items center
  justify-content center

.filter-article__list
  border-top 1px solid #E1E0E9
  border-bottom 1px solid #E1E0E9
  margin 16px 0 60px
  padding 30px 0
  display none
  +min(sMobile)
    column-count 4

  & > *
    font-size 18px
    line-height 32px
    font-weight 500

.filter-article__link
  display block
  &.active
    color #bdbdbd

.tag-title-page
  text-transform uppercase
  color #EF182F
  margin-bottom 10px
  font-weight 500

.page-articles
  .title-page
    font-size 32px
    line-height 34px
    max-width 776px
    margin-left auto
    margin-right auto

.main-img-article
  border-radius: 8px
  overflow hidden
  margin-bottom 22px
  line-height: 0;
  img
    border-radius: 8px
    overflow hidden

.article-content
  max-width: 776px
  width 100%
  margin 0 auto
  position relative
  +min(tabletLarge)
    p
    ul
    a
      font-size 20px
      line-height 26px
    p:not(:last-of-type)
      margin-bottom 22px
  h4
    margin-bottom 16px

  .wrap-social-share
    margin-top 30px
    +min(tablet)
      margin-top 0
      position absolute
      left -80px
      top 0
    a
      +min(tablet)
        display block
      &:not(:first-child)
        margin-left 15px
        +min(tablet)
          margin-top 12px
          margin-left 0

.wrap-block-other
  margin-top 168px
.article-list
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  &-item
    width: 260px;
    text-align: center;
    margin: 20px 0;
.vse_o_sekse
  section.wrapper
    padding: 0;
