.page-content > .wrap-block-size
  margin-top 20px
  &:first-of-type
    margin-top 57px
    padding-bottom 56px
    border-bottom: 1px solid #E1E0E9


.block-size__title
  text-align center
  font-weight: bold
  font-size: 18px
  line-height: 22px
  margin-bottom 57px

.block-size
  display flex
  max-width: 976px
  width 100%
  margin 0 auto
  .col
    max-width 376px
    width 100%
    flex-shrink: 1
    &:nth-child(1)
      .size-item:first-child
        margin-bottom 44px
    &:nth-child(3)
      .size-item:first-child
        margin-bottom 110px
    &:nth-child(2)
      max-width: 133px
      width 100%
      margin 0 auto
      flex 1 0 auto

.block-size
  +max(600px)
    flex-direction column
  .col
    .size-item
      +max(600px)
        margin-bottom 15px
    &:nth-child(1)
      .size-item:first-child
        +max(600px)
          margin-bottom 15px
    &:nth-child(3)
      .size-item:first-child
        +max(600px)
          margin-bottom 15px
    &:nth-child(2)
      +max(600px)
        order 1

.block-acc-size
  max-width 576px
  width 100%
  margin 60px auto 0

.acc-size-item
  &:not(:first-child)
    margin-top 15px

.accordion__content
  &:not(.active)
    display none

.acc-size__title
  background: #F3F4F5
  font-weight 500
  border-radius: 8px
  text-align center
  min-height: 48px
  display flex
  align-items center
  justify-content center
  cursor pointer

.acc-size__content
  padding-top 15px
  .wrap
    padding 19px
    border: 1px solid #E1E0E9
    border-radius: 8px

.acc-size__content_onlyone
  max-width 730px
  width 100%
  margin 22px auto 0