.my-custom-select
  position: relative;
  width: 100%;
  max-width: 500px;
  &.select-metro
    display: none;
    @media screen and (max-width: 760px)
      display: block;
  select
    display: none;
  // border: 1px solid
  .select-selected
    border: 1px solid #E1E0E9;
    border-radius: 8px;
    font-size: 14px;
    &:after
      position: absolute;
      content: "";
      top: 16px;
      right: 10px;
      width: 0;
      height: 0;
      border: 6px solid transparent;
      border-color: #000 transparent transparent transparent;
    &.select-arrow-active
      border-radius: 8px 8px 0 0;
      // border-bottom: transparent;
      &:after
        border-color: transparent transparent #fff transparent;
        top: 7px;
  .select-items div
  .select-selected
    color: #000;
    padding: 8px 16px;
    cursor: pointer;
  .select-items
    position: absolute;
    background-color: #fff;
    top: 100%;
    left: 0;
    right: 0;
    z-index: 99;
    border: 1px solid #E1E0E9;
    border-top: transparent;
    border-radius: 0 0 8px 8px;
    max-height: 50vh;
    overflow-y: scroll;
  .select-selected
  .select-items
    img
      vertical-align: middle;
      margin-right: 7px;
  /* Hide the items when the select box is closed: */
  .select-hide
    display: none;
  .select-items div:hover
  .same-as-selected
    background-color: rgba(0, 0, 0, 0.1);

