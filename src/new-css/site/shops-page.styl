.shops-showcase
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
  flex-wrap: wrap;
  &-item
    width: 362px;
    &.empty
      margin: 0;
      height: 0;
  &-img
    display: block;
    width: 100%;
    height: 240px;
    position: relative;
    img
      max-width: 100%;
      min-width: 90%;
      max-height: 100%;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      margin: auto;
  &-desc
    padding: 18px 30px 24px;
    a
      font-weight: 700;
      line-height: 32px;
      display: block;
      background-repeat: no-repeat;
      background-position: left center;
      background-size: 16px;
      padding-left: 20px;
      &.navy
        display: none;
        padding: 5px 0;
        border-radius: 5px;
        text-align: center;
        margin-top: 10px;
        border: 1px solid #f5d0cf;
        @media(max-width: 767px)
          display: block;
  &-week-wrap
    margin: 20px 0 0;
  &-week
    display: flex;
    text-align: center;
    padding: 10px 7px;
    text-transform: uppercase;
    background-color: #f5d0cf;
    justify-content: space-between;
    &-item
      width: 14.2857%;
    & .-off
      color: red;
    &-period
      color: #a29f9f;
      font-size: 20px;
      line-height: 120%;
      position: relative;
      text-align: center;
      letter-spacing: 1px;
      margin: 9px 0 0;
      text-transform: uppercase;
      &::before
      &::after
        top: -2px;
        content: ' ';
        display: block;
        position: absolute;
      &::before
        left: 0;
        height: 16px;
        width: 100%;
        background-color: #d0d0d0;
      &::after
        left: 0;
        right: 0;
        height: 12px;
        margin: 0 auto;
        width: calc(100% - 8px);
        background-color: #fff;
      div
          z-index: 2;
          padding: 0 14px;
          position: relative;
          display: inline-block;
          background-color: #fff;
