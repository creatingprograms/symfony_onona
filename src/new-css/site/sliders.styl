.swiper-pagination-bullets-dynamic
  margin-top: 10px;
  white-space: nowrap;
  left: 50%;
  transform: translate(-50%, 0);
  .swiper-pagination-bullet
    transition: 0.2s;
.sl-catalog__new
  padding-bottom: 40px;
  .top-20
    display: block;
    width: 122px;
    height: 122px;
    border-radius: 50%;
    background: #EF182F;
    background-clip: content-box;
    border: 13px solid rgba(239, 24, 47, 0.5);
    color: #fff;
    text-transform: uppercase;
    line-height: 96px;
    text-align: center;
    font-size: 20px;
    font-weight: 700;
  .wrap-sl-catalog__new
    width: 122px;
    .img
      display: block;
      width: 100%;
      height: 122px;
      // background-repeat: no-repeat;
      // background-position: center;
      // background-size: 72px;
      position: relative;
      margin-bottom: 10px;
      &::before
        content: '';
        display: block;
        height: 100%;
        width: 100%;
        border-radius: 50%;
        background: #F3F4F5;
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1;
      img
        display: block;
        max-width: 64%;
        max-height: 64%;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
    .catalog-item__title
      max-width: 100%;
      display: block;
      text-align: center;
  @media(max-width: 767px)
    .catalog-item__title
      font-size: 14px;
    .top-20
      width: 85px;
      height: 85px;
      line-height: 85px;
      border-width: 7px;
      font-size: 16px;
      line-height: 70px;
    .wrap-sl-catalog__new
      width: 104px;
      .img
        height: 85px;
        width: 85px;
        margin: auto;
        // background-size: 50px;
.wrap-block.wrap-block_min
  margin-top: 0px;
.mobile-only
.mobile-only-new
  display: none;
@media(max-width: 768px)
  .desktop-only
    display: none;
  .mobile-only
    display: block;
@media(max-width: 600px)
  .desktop-only-new
    display: none;
  .mobile-only-new
    display: block;
.double-view
  display: flex;
  justify-content: space-between;
  @media(max-width: 768px)
    justify-content: space-around;
  .element
    border-radius: 20px;
    overflow: hidden;
    line-height: 0;
    max-width: calc(50% - 17px);
    @media(max-width: 768px)
      border-radius: 9px;
      max-width: calc(50% - 4px);
.sl-b-new
  padding-bottom: 40px;
  box-sizing: content-box;
  // @media(max-width: 768px)
  .element-wrapper
    height: 100%;
    img
      border-radius: 20px;
      max-width: 100%;
      height: auto;
      @media(max-width: 768px)
        &.mobile-only
          height: auto;
    @media(max-width: 768px)
      img
        border-radius: 9px;

.sl-top-new
  width: 100%;
  padding-bottom: 40px;
  box-sizing: content-box;
  .custom-nav
    transform: translate(0, -50%);
    background-color: rgba(255,255,255,0.3)
    &:hover
      background-color: #fff;
  @media(max-width: 768px)
    margin-top: 12px;
    .custom-nav
      display: none;
  .element-wrapper
    height: 100%;
    overflow: hidden;
    img
      border-radius: 20px;
      position: relative;
      max-width: 100%;
      height: auto;
      @media(max-width: 768px)
        &.mobile-only
          height: auto;
.sl-catalog-new
  @media (min-width: 560px) and (max-width: 980px)
    .swiper-wrapper
      justify-content: center;
.custom-nav
  user-select: none;
