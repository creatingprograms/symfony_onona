.wrap-contact
  display flex
  border-radius: 8px
  overflow hidden
  +max(tablet)
    display block

.block-contact
  max-width: 376px
  width 100%
  flex 1 0 auto
  background-color #F3F4F5
  padding 32px 30px
  +max(tablet)
    max-width: 100%

.block-contact__title
  font-weight 600
  margin-bottom 24px
  +min(tablet)
    font-size: 24px
    line-height: 28px

.block-contact__item
  &:not(:first-child)
    margin-top 16px
  span
    display block
    &:first-child
      font-size: 13px
      line-height: 18px
      margin-bottom 4px

.block-map
  background-color #ccc
  width 100%
  +max(tablet)
    height 320px

.map
  height 100%

