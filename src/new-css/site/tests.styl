.js-submit-button.disabled
.js-submit-button.disabled:hover
  background-color: #ccc !important;
  border-color: #ccc;
  color: #fff;
  cursor: no-drop;
.page-test
  .form-sorting
    margin-bottom 40px

.test-item
  display flex
  justify-content space-between
  +max(sMobile)
    display block
  &:not(:first-child)
    margin-top 34px
  .wrap-rating-star
    margin-bottom 9px
  .rating-star
    max-width: 21px
    width 21px
    height 21px
    background-size contain
    margin-right 2px

.test-item__content
  width: 90%;
.test-item__img
  max-width 276px
  width 100%
  height 191px
  flex 1 0 auto
  margin-right 24px
  background-size cover
  background-repeat no-repeat
  border-radius 20px
  overflow hidden
  +max(mobile)
    width 37vw
    height 25vw
    max-height: 191px
    +max(sMobile)
      max-width: 100%
      width 100vw
      height 100vw
  +max(sMobile)
    margin-right 0
    margin-bottom 15px

.test-item__title
  font-weight 700
  font-size 18px
  line-height 22px
  margin-bottom 6px

.test-item__bottom
  display flex
  margin-top 19px
  +max(tablet)
    margin-top 15px
    flex-direction column-reverse
  .btn-full
    max-width 225px
    width 100%
    flex 1 0 auto
    margin-right 26px
    +max(tablet)
      margin-top 15px

.test-item__info
  span
    display block
    color #616C7C

.page-test-detaly
  .title-page
    font-size: 32px
    line-height: 34px
    max-width: 776px
    margin-left: auto
    margin-right: auto
    text-align center

.test-item_only
  max-width 824px
  margin 0 auto
  margin-top 39px
  margin-bottom 32px
  align-items center
  .test-item__img
    margin-right 48px

.form-test
  max-width 824px
  margin 0 auto
  .custom-check
    border 1px solid #EBEDEF
    border-radius: 8px
    &.item-offset
      padding-left 1%
      padding-right 1%
  .custom-check_shadow
    background-color #EBEDEF
    max-width 22px
    width 22px
    height 22px
    border-radius 50%
  .custom-check_shadow
    &::after
      background-image url('')
      border-radius: 50%
      width 12px
      height 12px
      background-color #EF182F
  .custom-check_label
    font-size: 15px
    line-height: 22px
  .item-offset
    padding 11px 2.7%
    &:not(:first-child)
      margin-top 8px
  .wrap-btn
    margin-top 60px
    display flex
    justify-content center
  .btn-full
    font-size 15px
    line-height 24px
    max-width: 225px
    width 100%

.block-question
  &:not(:first-child)
    margin-top 20px

.question__title
  background linear-gradient(180deg, rgba(255, 255, 255, 0.4) 0%, rgba(255, 255, 255, 0) 100%), #EBEDEF
  text-transform uppercase
  border-radius: 8px

.wrap-block-resulte
  margin-top 32px

.block-test-resulte
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.4) 0%, rgba(255, 255, 255, 0) 100%), #EBEDEF
  border-radius: 8px
  padding 44px 18px 52px
  h4
    margin-bottom 10px
  .wrap
    max-width: 824px
    width 100%
    margin 0 auto
  & + .wrap-btn
    margin-top 36px
    display flex
    justify-content center
    .btn-full
      font-size 15px
      line-height 24px
      max-width: 225px
      width 100%

.overview-list_four
  margin -12px
  display flex
  +max(tablet)
    flex-wrap: wrap
  .overview-item
    margin 12px
    flex 1 0 auto
    max-width: calc((100% / 4) - 24px)
    width 100%
    +max(tablet)
      max-width: calc((100% / 2) - 24px)
    +max(sMobile)
      max-width: 100%
    +max(tablet)
      width 50%
  .overview-item__img
    display block
    border-radius: 20px
    overflow hidden
    max-width: 100%
    width 100%
    height 191px
    max-height: 191px
    background-size cover
  .overview-item__text
    font-weight 700
    font-size 18px
    line-height 22px
  .wrap-rating-star
    margin-top 16px
    margin-bottom 10px
  .rating-star
    max-width: 22px
    width 22px
    height 22px
    margin-right 1px
    background-size contain
