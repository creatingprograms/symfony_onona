#age-18-BG
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 1000;
  background: rgba(0, 0, 0, .73);
.eithteen-age
  &-popup
    position: fixed;
    z-index: 999999;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    box-sizing: border-box;
    padding: 38px 40px 38px 253px;
    width: 783px;
    background: #f3d8df url(/frontend/images/18/img_big.jpg) no-repeat;
    *
      box-sizing: border-box;
    .notification-buttons
      display: flex;
      justify-content: space-between;
  &-button
    &-1
      background: #fe0000;
      font-weight: bold;
    &-2
      background: #bc4481;
    &-1,
    &-2
      color: #fff;
      text-align: center;
      text-decoration: none;
      line-height: 38px;
      font-size: 18px;
      padding: 0 25px;
      &:hover
        color: #000;
  &-text
    &-1,
    &-2
      color: #010000;
      font-size: 20px;
      margin-bottom: 32px;
      line-height: normal;
      &.center
        line-height: 160px;
        white-space: nowrap;
@media screen and (max-width: 900px)
  .eithteen-age
    &-popup
      width: 264px;
      padding: 217px 24px 0;
      background-size: 185px;
      background: #f3d7df url(/frontend/images/18/img.jpg) no-repeat 50% 6px;
      .notification-buttons
        flex-wrap: wrap;
        justify-content: center;
    &-text
      &-1,
      &-2
        font-size: 12px;
        margin-bottom: 19px;
        text-align: center;
    &-button
      &-1,
      &-2
        font-size: 15px;
        line-height: 33px;
        margin-bottom: 22px;
        &.center
          font-size: 16px;
.eithteen-age__new
  &-popup
    position: fixed;
    z-index: 999999;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    box-sizing: border-box;
    padding: 284px 100px 60px;
    width: 776px;
    background: #ffffff url(/frontend/images_new/consultant.svg) no-repeat 50% 27px;
    border-radius: 20px;
    box-shadow: 0px 4px 15px 0px #0000000D;
    @media screen and (max-width: 900px)
      max-width: 80%;
      padding: 124px 20px 20px;
      background-size: 84px;
    *
      box-sizing: border-box;
    .notification-buttons
      display: flex;
      justify-content: space-between;
      max-width: 489px;
      margin: auto;
      @media screen and (max-width: 700px)
        flex-wrap: wrap;
        justify-content: center;
      .btn-full
        min-width: 229px;
        @media screen and (max-width: 900px)
          min-width: 210px;
          margin-bottom: 20px;

  &-text
    font-size: 24px;
    font-weight: 600;
    line-height: 28px;
    margin-bottom: 52px;
    @media screen and (max-width: 900px)
      font-size: 18px;
      font-weight: 600;
      line-height: 22px;
      margin-bottom: 22px;
    @media screen and (max-width: 700px)
      font-size: 16px;
