.-oprosnik
  .block-top
    border-bottom: 1px solid #E1E0E9;
    margin-bottom: 20px;
  .subheader
    font: 400 20px/54px 'Golos';
    +max(600)
      line-height: 24px;
      font-size: 16px;
  .form-oprosnik
    .flex
      display: flex;
      align-items: center;
      +max(600)
        flex-wrap: wrap;
      .subheader
        line-height: 36px;
        +max(600)
          line-height: 24px;
          margin-top: 20px;
    .btn-full
      width: 197px;
      margin-right: 36px; 
      height: 48px;
      padding: 0;
      +max(600)
        margin: auto;
    .form
      &-row
        .check-check_block
          +max(600)
            margin-right: 10px;
        margin-bottom: 20px;
        border-radius: 10px;
        border: 1px solid #E1E0E9;
        padding: 24px 0;
        &:hover
          box-shadow: 0px 0px 20px 2px rgba(95, 95, 95, 0.1);
        &.flat
          border: none;
          margin: 0 -32px;
          padding-top: 0;
          +max(600)
            margin: 0 -10px;
          &:hover
            box-shadow: none;
          .form-label
            border: hidden;
            padding-bottom: 0;
            font-size: 13px;
          .form-controls
            padding-top: 8px;
      &-label
        padding: 0 32px 24px;
        border-bottom: 1px solid #E1E0E9;
        +max(600)
          padding: 0 10px 24px;
          font-size: 14px;
      &-controls
        padding: 24px 32px 0;
        display: flex;
        +max(600)
          padding: 24px 10px 0;
        .custom-check_circle
          margin-right: 20px;
        textarea
          border: 1px solid #E1E0E9;
          height: 128px;
          border-radius: 10px;
          padding: 14px 16px;
          width: 100%;

